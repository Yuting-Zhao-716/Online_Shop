<%- include('../sharedViews/head',{pageTitle:'New Product'}) %>
<link href="/styles/form.css" rel="stylesheet">

</head>
<body>
<%- include('../sharedViews/header') %>
<main>
    <section class="form">
        <h1>Add New Product</h1>
        <form action="/product-management/new?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
            <p>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required>
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*" required>
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" maxlength="250" required>
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" name="price" min="0.01" step="0.01" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="7" required></textarea>
            </p>
            <section class="buttons">
                <div>
                    <button type="reset" class="btn btn-alt">Reset</button>
                    <button class="btn">Save</button>
                </div>
            </section>
        </form>

    </section>
</main>

<%- include('../sharedViews/footer') %>
