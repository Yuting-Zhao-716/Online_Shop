
<%-include('../sharedViews/head',{pageTitle:'Sign Up'})%>
<link href="./styles/form.css" rel="stylesheet">

</head>
<body>
<%- include('../sharedViews/header')%>
<main>
    <section class="form">
        <h1>Sign Up Now</h1>
        <form action="/signup" method="post">
            <p>
                <label>Email</label>
                <input type="email" id="email" name="email" required>
            </p>
            <p>
                <label>Confirmed Email</label>
                <input type="email" id="confirmedEmail" name="confirmedEmail" required>
            </p>
            <p>
                <label>Password</label>
                <input type="password" id="password" name="password" minlength="6" required>
            </p>
            <p>
                <label>Confirmed Password</label>
                <input type="password" id="confirmedPassword" name="confirmedPassword" required>
            </p>
            <hr>
            <p>
                <label>Name</label>
                <input type="text" id="name" name="name" maxlength="30" required>
            </p>
            <p>
                <label>Contact Number</label>
                <input type="text" id="phone" name="phone" maxlength="20" required>
            </p>
            <p>
                <label>Address</label>
                <input type="text" id="address" name="address" maxlength="50" required>
            </p>
            <p>
                <label>Postal Code</label>
                <input type="text" id="postal" name="postal" maxlength="10" required>
            </p>
            <p>
                <label>City</label>
                <input type="text" id="city" name="city" maxlength="30" required>
            </p>
            <section class="buttons">
                <div>
                <button type="reset">Reset</button>
                <button type="submit">Submit</button>
                </div>
                <a href="/login">Login instead</a>
            </section>
        </form>
    </section>

</main>

<%- include('../sharedViews/footer')%>