
<%-include('../sharedViews/head',{pageTitle:'Sign Up'})%>
<link href="./styles/form.css" rel="stylesheet">

</head>
<body>
<%- include('../sharedViews/header')%>
<main>
    <section class="form">
        <h1>Sign Up Now</h1>
        <form action="/signup" method="post">
            <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>">
            <% if(data.errorMessage){%>
                <p id="errorMessage"> <%=data.errorMessage %></p>
            <%}%>
            <p>
                <label>Email</label>
                <input type="email" id="email" name="email" value="<%=data.email%>" required>
            </p>
            <p>
                <label>Confirmed Email</label>
                <input type="email" id="confirmedEmail" name="confirmedEmail" value="<%=data.confirmedEmail%>" required>
            </p>
            <p>
                <label>Password</label>
                <input type="password" id="password" name="password" minlength="6" value="<%=data.password%>" required>
            </p>
            <p>
                <label>Confirmed Password</label>
                <input type="password" id="confirmedPassword" name="confirmedPassword" value="<%=data.confirmedPassword%>" required>
            </p>
            <hr>
            <p>
                <label>Name</label>
                <input type="text" id="name" name="name" maxlength="30" value="<%=data.name%>" required>
            </p>
            <p>
                <label>Contact Number</label>
                <input type="text" id="phone" name="phone" maxlength="20" value="<%=data.phone%>" required>
            </p>
            <p>
                <label>Address</label>
                <input type="text" id="address" name="address" maxlength="50" value="<%=data.address%>" required>
            </p>
            <p>
                <label>Postal Code</label>
                <input type="text" id="postal" name="postal" maxlength="10" value="<%=data.postal%>" required>
            </p>
            <p>
                <label>City</label>
                <input type="text" id="city" name="city" maxlength="30" value="<%=data.city%>" required>
            </p>
            <section class="buttons">
                <div>
                <button type="reset">Reset</button>
                <button type="submit">Submit</button>
                </div>
                <a href="/login">Login instead</a>
            </section>
        </form>
    </section>

</main>

<%- include('../sharedViews/footer')%>