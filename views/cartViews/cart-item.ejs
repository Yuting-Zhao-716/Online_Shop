<div class="col-12 col-md-6 col-lg-3">
<article class="cart-item card">
    <div class="cart-item-info card-body">
        <h2 class="card-title"><%= item.product.title %></h2>
        <p class="card-text">$ <span class="cart-item-price"><%=item.itemTotalPrice.toFixed(2)%></span> <span class="cart-product-price">($ <%=item.product.price.toFixed(2)%>)</span></p>
    </div>
    <form class="cart-item-management" data-productid="<%=item.product._id%>" data-csrf="<%=locals.csrfToken%>">
        <input type="number" value="<%=item.quantity%>" required>
        <button class="btn btn-alt">Update</button>
    </form>
</article>
</div>