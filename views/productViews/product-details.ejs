<%- include('../sharedViews/head',{pageTitle:'Product Details'}) %>

<link href="/styles/products.css" rel="stylesheet"/>
<script src="/scripts/add-item-to-cart.js" type="text/javascript" defer></script>


</head>
<body>
<%- include('../sharedViews/header') %>
<main id="product-details">
    <header>
        <img src="<%=product.imageUrl%>" alt="PRODUCT-IMAGE"/>
        <div id="product-info">
            <h1><%=product.title%></h1>
            <p>Price: <%=product.price%></p>
            <button class="btn-alt btn" data-productid="<%=product._id%>" data-csrf="<%=locals.csrfToken%>">Add to Cart</button>
        </div>
    </header>
    <p id="product-description"><%=product.summary%></p>
    <p id="product-description"><%=product.description%></p>
</main>

<%- include('../sharedViews/footer') %>
