<div class="col-12 col-md-6 col-lg-3">
    <div class="card text-center ">
        <img src="/products/assets/images/<%= product.image[0].filename %>" class="card-img-top"
             alt="<%= product.title %>">
        <div class="card-body">
            <h5 class="card-title"><%= product.title.toUpperCase() %></h5>
            <a href="/products/<%= product._id %>" class="btn btn-primary">Shop</a>
        </div>
    </div>
</div>